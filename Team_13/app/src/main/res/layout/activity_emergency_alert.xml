<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9e9"
    android:padding="24dp">

    <!-- Heading -->
    <TextView
        android:id="@+id/alarmHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Someone is in danger"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#d32f2f"
        android:gravity="center"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <!-- Map container -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="#ddd"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/alarmHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintBottom_toTopOf="@+id/openGoogleMapsButton"/>

    <!-- Open in Google Maps button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/openGoogleMapsButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Open in Google Maps"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:backgroundTint="#70a36b"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/mapContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Buttons stacked vertically -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/callPersonButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Call Person"
        android:textAllCaps="false"
        android:backgroundTint="#1976d2"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/openGoogleMapsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/callCopsButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Call Cops"
        android:textAllCaps="false"
        android:backgroundTint="#d32f2f"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        android:layout_marginTop="16dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/callPersonButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/callAmbulanceButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Call Ambulance"
        android:textAllCaps="false"
        android:backgroundTint="#388e3c"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        android:layout_marginTop="16dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/callCopsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Logo & app name -->
    <LinearLayout
        android:id="@+id/logo_and_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:src="@drawable/everwatch_logo"
            android:contentDescription="App Logo"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/everwatchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="everwatch"
            android:textSize="30sp"
            android:textColor="#70a36b"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:alpha="0.8" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
