<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content container -->

    <!-- Sliding menu panel -->
    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Your app content here -->
    </FrameLayout>

    <LinearLayout
        android:id="@+id/menuPanel"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff9e9"
        android:paddingStart="24dp"
        android:paddingTop="40dp"
        android:layout_gravity="start">

        <!-- Back Arrow -->
        <ImageButton
            android:id="@+id/backArrow"
            android:layout_width="44dp"
            android:layout_height="55dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/arrow_back"
            android:tint="#70a36b"
            android:layout_gravity="start"
            android:layout_marginBottom="24dp" />

        <!-- Home Row -->
        <LinearLayout
            android:id="@+id/homeRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/everwatch_logo"
                android:contentDescription="Home" />

            <TextView
                android:id="@+id/menuHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginStart="18dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- Account Row -->
        <LinearLayout
            android:id="@+id/accountRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_person"
                android:contentDescription="Account" />

            <TextView
                android:id="@+id/menuAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginStart="18dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- Voice Profile Row -->
        <LinearLayout
            android:id="@+id/voiceProfileRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_microphone"
                android:contentDescription="Voice Profile" />

            <TextView
                android:id="@+id/menuVoiceProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voice Profile"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginStart="18dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- Emergency Contact Row -->
        <LinearLayout
            android:id="@+id/emergencyContactRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/call"
                android:contentDescription="Emergency Contacts" />

            <TextView
                android:id="@+id/menuEmergencyContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Contacts"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginStart="18dp"
                android:gravity="center_vertical" />
        </LinearLayout>



        <!-- Safety Resources Heading -->
        <TextView
            android:id="@+id/safety_resources_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety Resources"
            android:textSize="16sp"
            android:textColor="#931f1d"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:gravity="start" />

        <!-- Safety Instructions Row -->
        <LinearLayout
            android:id="@+id/safetyInstructionsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_info"
                android:contentDescription="Safety Instructions" />

            <TextView
                android:id="@+id/menuSafetyInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safety Instructions"
                android:textSize="16sp"
                android:textColor="#931f1d"
                android:layout_marginStart="18dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- User Guide Row -->
        <LinearLayout
            android:id="@+id/userGuideRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/book"
                android:contentDescription="User Guide" />

            <TextView
                android:id="@+id/menuUserGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Guide"
                android:textSize="16sp"
                android:textColor="#931f1d"
                android:layout_marginStart="18dp"
                android:gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
