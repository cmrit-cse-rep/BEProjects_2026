<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9e9">

    <androidx.cardview.widget.CardView
        android:id="@+id/voiceProfileCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="26dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Your Voice Profile"
                android:textColor="#70a36b"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginBottom="14dp" />

            <!-- Wakeword Input Field (Changed from dropdown to text input) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wakewordInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Wake Word"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="#f5f5f5"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintTextColor="#70a36b"
                app:boxStrokeColor="#70a36b">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/wakewordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Start Enrollment Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartEnrollment"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Start Voice Detection"
                android:backgroundTint="#70a36b"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="4dp"/>

            <!-- Instructions Text -->
            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter any word or phrase as your wake word"
                android:textSize="14sp"
                android:textColor="#70a36b"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

            <!-- Sample Count -->
            <TextView
                android:id="@+id/tvSampleCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Samples: 0 / 5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#70a36b"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <!-- Record Sample Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecordSample"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Hold to Record Sample"
                android:backgroundTint="#70a36b"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:visibility="gone"/>

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#ecfae6"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_info"
                        app:tint="#70a36b" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Type your custom wake word (e.g., help, emergency, assistance). Say it clearly to activate Everwatch in any situation."
                        android:textSize="14sp"
                        android:textColor="#70a36b"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
